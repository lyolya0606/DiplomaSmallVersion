<Window x:Name="mainUserWindow" x:Class="Diploma.UserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Diploma"
        xmlns:wpf="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        mc:Ignorable="d"
        FontFamily="{StaticResource Inter}"
        Title="Информационная система выбора оборудования для производства озонобезопасных хладонов" Height="570" Width="790"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen" Icon="/freony-390x240.png">
    <StackPanel Orientation="Vertical" Margin="0, 0, 0, 0">

        <StackPanel>
            <Button Content="Выйти" Background="White"  BorderBrush="White" Click="back_ButtonClick" FontWeight="Bold" FontSize="7" HorizontalAlignment="Left" />
        </StackPanel>
        <!--<Button Content="Выйти" Height="27" Width="53" Background="White" BorderBrush="White" Click="Button_Click" FontWeight="Bold"/>-->
        <TabControl Margin="0, 0, 0, 0"  SelectionChanged="TabControl_SelectionChanged" Height="560">
            <TabItem x:Name="eqiupmentTab">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Ellipse Height="7" Width="7" Fill="Black" />
                        <TextBlock Margin="3" FontSize="8">Выбор оборудования</TextBlock>
                    </StackPanel>
                </TabItem.Header>

                <TabItem.Content>
                    <StackPanel Orientation="Vertical" Height="500" >
                        <!--<StackPanel Width="53" HorizontalAlignment="Left">
                            <Button Content="Выйти" Height="27" Width="53" Background="White" BorderBrush="White" Click="Button_Click" FontWeight="Bold"/>
                        </StackPanel>-->

                        <StackPanel Orientation="Horizontal" Margin="0, 0, 0, 0" Width="190">
                            <Label Content="Марка:" FontSize="8" FontWeight="Bold"/>
                            <ComboBox x:Name="marks_ComboBox" Margin="5,0,0,0" VerticalAlignment="Center" Width="130" Height="20" VerticalContentAlignment="Center" FontSize="8" Background="White" BorderBrush="#FF030000" HorizontalAlignment="Center" SelectionChanged="marks_ComboBox_SelectionChanged"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0, 0, 0, 0" Width="401" HorizontalAlignment="Left">
                            <Label Content="Наименование:" FontSize="8" Width="100" FontWeight="Bold"/>
                            <Label x:Name="name_label" FontSize="8" Margin="-8, 0, 0, 0" Width="274"/>
                        </StackPanel>


                        <StackPanel Orientation="Horizontal" Margin="0, 0, 0, 0" Width="401" HorizontalAlignment="Left">
                            <Label Content="Химическая формула:" FontSize="8" Width="100" FontWeight="Bold"/>
                            <Label x:Name="formula_label" FontSize="8" Margin="-8, 0, 0, 0" Width="274"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0, 0, 10, 0">
                            <Label Content="Область применения:" FontSize="8" Width="100" FontWeight="Bold"/>
                            <!--<TextBlock Name="area_label" FontSize="14" TextWrapping="Wrap" Margin="5, 0, 0, 0" Width="1294" Height="43" VerticalAlignment="Center"/>-->
                            <Label x:Name="area_label" FontSize="8" Margin="-8, 0, 0, 0" Width="auto" Height="auto" VerticalContentAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0, 0, 10, 0">
                            <Label Content="Режимы реактора:" FontSize="8" Width="100" FontWeight="Bold"/>
                            <!--<TextBlock Name="area_label" FontSize="14" TextWrapping="Wrap" Margin="5, 0, 0, 0" Width="1294" Height="43" VerticalAlignment="Center"/>-->
                            <Label x:Name="reactorModes_label" FontSize="8" Margin="-8, 0, 0, 0" Width="auto" Height="auto" VerticalContentAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Orientation="Vertical" Margin="10, 0, 10, 0">
                            <Label Content="Технологическая схема" FontSize="8" Width="110" FontWeight="Bold"/>
                            <Image x:Name="scheme_image" Width="750" Height="220" MouseDown="scheme_image_MouseDown" />
                        </StackPanel>
                        <StackPanel  Orientation="Horizontal" Margin="10, 0, 10, 20">
                            <StackPanel Orientation="Horizontal">
                                <StackPanel.ScrollOwner>
                                    <ScrollViewer/>
                                </StackPanel.ScrollOwner>
                                <Label Content="Обозначения:" FontSize="8" Width="65" FontWeight="Bold"/>
                                <DataGrid x:Name="designation_DataGrid" Height="130" IsReadOnly="True" CanUserAddRows="False" CanUserDeleteRows="False" d:ItemsSource="{d:SampleData ItemCount=5}" AutoGenerateColumns="False" VerticalScrollBarVisibility="Visible" Background="White" CanUserSortColumns="False" FontSize="8"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="15, 0, 0, 0">
                                <StackPanel.ScrollOwner>
                                    <ScrollViewer/>
                                </StackPanel.ScrollOwner>
                                <Label Content="Стадии:" FontSize="8" Width="45" FontWeight="Bold"/>
                                <DataGrid x:Name="stage_DataGrid" Height="130" IsReadOnly="True" CanUserAddRows="False" CanUserDeleteRows="False" d:ItemsSource="{d:SampleData ItemCount=5}" AutoGenerateColumns="False" VerticalScrollBarVisibility="Visible" Background="White" SelectionChanged="stage_DataGrid_SelectionChanged" CanUserSortColumns="False" FontSize="8"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </TabItem.Content>
            </TabItem>

            <!--<StackPanel Orientation="Horizontal"  Margin="10, 10, 10, 5">-->
            <!--<StackPanel Width="54" HorizontalAlignment="Left">
            <Button x:Name="back_Button"  FontWeight="Bold" Content="Выйти" Background="White" BorderBrush="White" HorizontalAlignment="Center" VerticalAlignment="Center" Click="back_ButtonClick"/>
        </StackPanel>-->

            <TabItem x:Name="mathTab">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Ellipse Height="7" Width="7" Fill="Black" />
                        <TextBlock Margin="3" FontSize="8">Поверочный расчет</TextBlock>
                    </StackPanel>
                </TabItem.Header>

                <TabItem.Content>
                    <StackPanel Orientation="Horizontal" Height="536">
                        <StackPanel Orientation="Vertical" Margin="5, 0, 10, 0" Width="205" Height="522">
                            <Button Margin="0, 5, 0, 0" x:Name="calculateButton" Background="#FFC5FCDE" HorizontalAlignment="Center" FontSize="8" Height="20" Width="55" FontWeight="Bold" Content="Рассчитать" VerticalAlignment="Center" Click="calculateButton_Click"/>
                            <ProgressBar x:Name="progressBar" Height="7" Width="55" Background="White" Margin="0, 2, 0, 0"/>

                            <StackPanel Margin="0, 5, 0, 0">
                                <DataGrid x:Name="concDataGrid" Height="400" Width="205" CanUserAddRows="False" CanUserDeleteRows="False" d:ItemsSource="{d:SampleData ItemCount=23}" AutoGenerateColumns="False" VerticalScrollBarVisibility="Visible" Background="White" FontSize="8" CanUserSortColumns="False"/>
                            </StackPanel>

                            <StackPanel Margin="0, 15, 0, 0" Orientation="Horizontal" HorizontalAlignment="Center">
                                <Label FontSize="8" FontWeight="Bold" VerticalContentAlignment="Center" Content="Температура, °C"  Height="23" Width="80" HorizontalAlignment="Left"/>
                                <TextBox x:Name="temperatureTextBox" PreviewTextInput="NumberValidationTextBox" VerticalContentAlignment="Center" FontSize="8" Width="50" Height="23" Margin="0, 0, 0, 0" BorderBrush="Black" Text="400" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Orientation="Vertical" Margin="0, 0, 0, 0" Width="560" Height="534">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Margin="0, 10, 15, 0" x:Name="reactorButton" Background="White" FontSize="8" Height="22" Width="129" FontWeight="Bold" Content="Характеристики реакторов" Click="reactorButton_Click"/>
                                <Button Margin="0, 10, 15, 0" x:Name="kineticsButton" Background="White" FontSize="8" Height="22" Width="129" FontWeight="Bold" Content="Кинетические параметры" Click="kineticsButton_Click"/>
                                <Button Margin="0, 10, 0, 0" x:Name="chooseButton" Background="White" HorizontalAlignment="Center" FontSize="8" Height="22" Width="90" FontWeight="Bold" Content="Выбрать вещество" Click="chooseButtonClick"/>
                                <Button Margin="15, 10, 0, 0" x:Name="showTableButton" Background="White" HorizontalAlignment="Center" FontSize="8" Height="22" Width="90" FontWeight="Bold" Content="Показать таблицу" Click="showTableButton_Click" IsEnabled="False"/>
                            </StackPanel>

                            <StackPanel Margin="0, 10, 0, 0" Width="560">
                                <wpf:CartesianChart x:Name="concChart" Series="{Binding SeriesCollectionConc}" LegendLocation="Right" Height="405" Width="560"/>
                            </StackPanel>

                            <StackPanel Margin="0, 15, 0, 0" Orientation="Horizontal" HorizontalAlignment="Center">
                                <StackPanel Orientation="Horizontal">
                                    <Label FontSize="8" FontWeight="Bold" VerticalContentAlignment="Center" Content="Время контакта, с" Height="23" Width="85" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    <TextBox x:Name="timeTextBox" PreviewTextInput="NumberValidationTextBox" VerticalContentAlignment="Center" Height="23" FontSize="8" Width="50" Margin="0, 0, 0, 0" HorizontalAlignment="Left" VerticalAlignment="Center" BorderBrush="Black" Text="10" TextAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Margin="90, 0, 0, 0" Orientation="Horizontal">
                                    <Label FontSize="8" FontWeight="Bold" VerticalContentAlignment="Center" Content="Конечная концентрация целевого продукта, моль/л: " Height="23" Width="225"/>
                                    <Label x:Name="finishConcLabel" FontSize="8" FontWeight="Bold" VerticalContentAlignment="Center" Content="-" Height="23" Width="60" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </TabItem.Content>
                <!--</StackPanel>-->
            </TabItem>

        </TabControl>
    </StackPanel>
</Window>
